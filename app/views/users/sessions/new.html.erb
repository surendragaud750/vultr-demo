<div class="background-banner">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-8 mx-lg-auto mx-md-auto">
        <div class="card mt-5 mb-5 login-box border-0">
          <div class="card-body box-body">
            <h1 class="login-title mt-4">Welcome Back</h1>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group">
                <span class="fa fa-envelope-o form-control-icon"></span>
                <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control border input-custom", placeholder: "Email Address" %>
              </div>
              <div class="form-group">
                <span class="fa fa-lock form-control-icon"></span>
                <%= f.text_field :password, autocomplete: "password",class: "form-control border input-custom", placeholder: "Password" %>
              </div>
              <div class="login-links text-right">
                <%= link_to "Forgot password?", "javascript:void(0)" %>
              </div>
              <div class="login-button mt-4 pt-2">
                <%= f.submit "Log In", class: "btn btn-primary btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>  
</div>
